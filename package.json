{
  "name": "@wahyubucil/adonis-prisma",
  "version": "1.0.0",
  "description": "Prisma Provider for AdonisJS",
  "main": "build/providers/PrismaProvider.js",
  "files": [
    "build/adonis-typings",
    "build/commands",
    "build/providers",
    "build/src",
    "build/templates"
  ],
  "types": "./build/adonis-typings/index.d.ts",
  "keywords": [
    "AdonisJS",
    "Prisma",
    "Adonis Prisma"
  ],
  "author": "wahyubucil",
  "license": "MIT",
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "pretest": "npm run lint",
    "test": "node .bin/test.js",
    "clean": "del build",
    "compile": "npm run lint && npm run clean && tsc && npm run copyfiles",
    "copyfiles": "copyfiles \"templates/**/*.txt\" build",
    "build": "npm run compile",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "commit": "git-cz",
    "release": "np --message=\"chore(release): %s\"",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json wahyubucil/adonis-prisma"
  },
  "devDependencies": {
    "@adonisjs/auth": "^8.2.3",
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/mrm-preset": "^5.0.3",
    "@adonisjs/require-ts": "^2.0.13",
    "@prisma/client": "^5.0.0",
    "@types/node": "^20.4.5",
    "commitizen": "^4.3.0",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.9.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^5.0.0",
    "github-label-sync": "^2.3.1",
    "husky": "^8.0.3",
    "japa": "^4.0.0",
    "mrm": "^4.1.17",
    "np": "^8.0.4",
    "prettier": "^3.0.0",
    "prisma": "^5.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@poppinss/utils": "^5.0.0"
  },
  "peerDependencies": {
    "@adonisjs/auth": "^8.2.3",
    "@adonisjs/core": "^5.9.0",
    "@prisma/client": "^5.0.0",
    "prisma": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "@adonisjs/auth": {
      "optional": true
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wahyubucil/adonis-prisma.git"
  },
  "bugs": {
    "url": "https://github.com/wahyubucil/adonis-prisma/issues"
  },
  "homepage": "https://github.com/wahyubucil/adonis-prisma#readme",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "mrmConfig": {
    "core": false,
    "license": "MIT",
    "services": [],
    "minNodeVersion": "18.17.0",
    "probotApps": [
      "stale",
      "lock"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptPackage",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "adonisjs": {
    "types": "@wahyubucil/adonis-prisma",
    "providers": [
      "@wahyubucil/adonis-prisma"
    ],
    "commands": [
      "@wahyubucil/adonis-prisma/build/commands"
    ]
  },
  "engines": {
    "node": "18",
    "npm": "9"
  }
}
